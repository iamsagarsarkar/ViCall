<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CallActivity">


    <WebView
        android:id="@+id/wv_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <LinearLayout
        android:id="@+id/callControlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_toggle_video"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_call_background"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_videocam" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_toggle_audio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:background="@drawable/shape_call_background"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_mic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_end_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:background="@drawable/shape_call_background"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_call_end_24" />

    </LinearLayout>

</RelativeLayout>